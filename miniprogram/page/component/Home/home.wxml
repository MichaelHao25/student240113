<scroll-view class="container" 	scroll-y="true">
<view class="form">
  <form bindsubmit="onSubmit">
    <view class="form-item">
      <view class="label">姓名</view>
      <input model:value="{{name}}" name="name" type="text" placeholder="请输入您的姓名" />
    </view>
    <view class="form-item">
      <view class="label">性别</view>
      <radio-group  name="gender">
        <label><radio value="male" checked="{{gender==='male'}}"/>男</label>
        <label class="lb"><radio value="female"  checked="{{gender==='female'}}"/>女</label>
      </radio-group>
    </view>
    <view class="form-item">
      <view class="label">学号</view>
      <input model:value="{{studentId}}" name="studentId" type="text" placeholder="请输入您的学号" />
    </view>
    <view class="form-item">
      <view class="label">班级</view>
      <input model:value="{{class}}" name="class" type="text" placeholder="请输入您的班级" />
    </view>
    <view class="form-item">
      <view class="label">手机号</view>
      <input model:value="{{phone}}" name="phone" type="tel" placeholder="请输入您的手机号码" />
    </view>
    <view class="form-item">
      <view class="label">学院</view>
      <input model:value="{{college}}" name="college" type="text" placeholder="请输入您的学院" />
    </view>
    <view class="form-item">
      <view class="label">专业</view>
      <input model:value="{{major}}" name="major" type="text" placeholder="请输入您的专业" />
    </view>
    <view class="form-item">
      <view class="label">邮箱</view>
      <input model:value="{{email}}" name="email" type="email" placeholder="请输入您的邮箱地址" />
    </view>
    <view class="form-item">
      <view class="label">地址</view>
      <input model:value="{{address}}" name="address" type="text" placeholder="请输入您的联系地址" />
    </view>
    <button class="submit-button" formType="submit">提交</button>
  </form>
</view>
</scroll-view>
