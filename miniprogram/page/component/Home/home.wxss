.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 100vh;
  background-color: #52ba99;
}

.form-item {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  margin: 15px 0;
  width: 260px;
}

.label {
  width: 25%;
  font-size: 16px;
  color: #fff;
  vertical-align: middle;
}
.lb{
  margin-left: 25px;
}
input,
radio-group {
  flex: 1;
  height: 36px;
  line-height: 36px;
  padding: 0 10px;
  border: none;
  border-radius: 4px;
  outline: none;
  font-size: 14px;
  color: #666;
  background-color: #f5f5f5;
  vertical-align: middle;
}

input::-webkit-input-placeholder {
  color: #aaa;
}

.radio-group {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: flex-start;
}

.radio-group label {
  margin-right: 20px;
  font-size: 14px;
  color: #fff;
}

.submit-button {
  margin-top: 20px;
  width: 80%;
  height: 40px;
  background-color: #fff;
  border: none;
  border-radius: 4px;
  font-size: 16px;
  line-height: 1.5;
  color: #52ba99;
}