/* page/component/Login/login.wxss */
.img{
  width: 80px;
  height: 80px;
  display: block;
  margin: 50px auto 150rpx;
}
.page {
  
  height: 100vh;
  background-color: #ffffff;
}

.logo {
  width: 100px;
  height: 100px;
  margin-bottom: 50px;
}

form {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  width: 80%;
  display: block;
  margin: 0 auto;
  background-color: #f5f5f5;
  border-radius: 20px;
  box-shadow: 0 5px 10px rgba(0, 0, 0, 0.2);
  padding: 20px;
}

.input-box {
  display: flex;
  align-items: center;
  margin-bottom: 20px;
}

.icon {
  width: 20px;
  height: 20px;
  margin-right: 10px;
}
.form{
  width: 90%;
  display: block;
  margin: 0 auto;
}
.input {
  flex: 1;
  height: 40px;
  border-radius: 20px;
  background-color: #ffffff;
  font-size: 16px;
  padding: 0 10px;
  border: none;
  box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
  outline: none;
}

.button {
  width: 100%;
  height: 40px;
  border-radius: 20px;
  background-color: #52ba99;
  color: #ffffff;
  font-size: 16px;
  border: none;
  box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
  cursor: pointer;
  transition: all 0.3s ease;
}

.button:hover {
  opacity: 0.8;
}